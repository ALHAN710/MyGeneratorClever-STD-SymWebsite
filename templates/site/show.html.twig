{% extends 'base.html.twig' %}

{% block title %}Site{% endblock %}

{% block body %}
    <h1>Site</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ site.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ site.slug }}</td>
            </tr>
            <tr>
                <th>PowerSubscribed</th>
                <td>{{ site.powerSubscribed }}</td>
            </tr>
            <tr>
                <th>FuelPrice</th>
                <td>{{ site.fuelPrice }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ site.currency }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ site.createdAt ? site.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('site_index') }}">back to list</a>

    <a href="{{ path('site_edit', {'id': site.id}) }}">edit</a>

    {{ include('site/_delete_form.html.twig') }}
{% endblock %}
