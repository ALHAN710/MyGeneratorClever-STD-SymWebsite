{% extends 'base.html.twig' %}

{% block title %}Zones list{% endblock %}

{% block breadcrumbItem %}
<li class="breadcrumb-item"><a href="javascript:void(0);">Zone</a></li>
<li class="breadcrumb-item active">List</li>
{% endblock %}

{% block pageTitle %}Zones{% endblock %}

{% block body %}
    <h1>Zones list</h1>
    {# <div class="mt-2 mb-2 mr-5 text-right">
        <a href="{{ path('zone_new') }}" class="btn btn-soft-primary rounded waves-effect " data-toggle="tooltip" data-placement="top" title="Add new zone ?"><i class="fa fa-plus-circle mr-2"></i>Add</a>
    </div> #}

    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Site Name</th>
                <th class="text-center">Power Subscribed (kVA)</th>
                <th class="text-center">Users</th>
                <th class="text-center">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for zone in zones %}
            <tr>
                <td>{{ zone.name }}</td>
                <td>{{ zone.type }}</td>
                <td>{{ zone.site.name }}</td>
                <td class="text-center">{{ zone.powerSubscribed }}</td>
                <td class="text-center">{{ zone.users|length }}</td>
                <td class="text-center">
                    <a href="{{ path('zone_setting', {'zone': zone.id}) }}" class="btn btn-soft-primary btn-xs rounded waves-effect mr-2" data-toggle="tooltip" data-placement="top" title="Edit zone ?"><i class="far fa-edit mr-2"></i>Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
