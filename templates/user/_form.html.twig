{{ form_start(form) }}
    {# {{ form_widget(form) }} #}
    <div class="row">
        <div class="form-group col">
            {{ form_label(form.firstName, null, {'label_attr': {'class': ''}}) }}
            {{ form_widget(form.firstName, {'attr': {'class': "form-control"}}) }}
            <small class="form-text text-muted">* Obligatoire</small>
        </div>
        <div class="form-group col">
            {{ form_label(form.lastName, null, {'label_attr': {'class': ''}}) }}
            {{ form_widget(form.lastName, {'attr': {'class': "form-control"}}) }}
            <small class="form-text text-muted">* Obligatoire</small>
        </div>
    
    </div>

    <div class="row">
        <div class="form-group col">
            {{ form_label(form.email, null, {'label_attr': {'class': ''}}) }}
            {{ form_widget(form.email, {'attr': {'class': "form-control"}}) }}
            <small class="form-text text-muted">* Obligatoire</small>
        </div>
        <div class="form-group col">
            {{ form_label(form.phoneNumber, null, {'label_attr': {'class': ''}}) }}
            {{ form_widget(form.phoneNumber, {'attr': {'class': "form-control"}}) }}
            <small class="form-text text-muted">* Obligatoire</small>
        </div>
    
    </div>

    <div class="row">
        {% if isEdit == false %}
        <div class="form-group col">
            {{ form_label(form.password, null, {'label_attr': {'class': ''}}) }}
            {{ form_widget(form.password, {'attr': {'class': "form-control"}}) }}
            
        </div>
        {% endif %}
        <div class="form-group col">
            {{ form_label(form.roles, 'Role', {'label_attr': {'class': ''}}) }}
            {{ form_widget(form.roles, {'attr': {'class': ""}}) }}
            
        </div>
    
    </div>

    {# <button class="btn">{{ button_label|default('Save') }}</button> #}
    <div class="row float-left">
        <a href="{{ path('user_index') }}" class="btn btn-danger mr-2 mt-4 waves-effect">Back to list</a>
        <button type="submit" class="btn btn-primary mt-4 waves-effect" id="saveBtn">
            <span class="spinner-border spinner-border-sm mr-1 d-none" role="status" aria-hidden="true"></span>
            {{ button_label|default('Save') }}
        </button>
    
    </div>
{{ form_end(form) }}
